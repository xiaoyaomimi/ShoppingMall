<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAFAFA"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/confirm_order_item_title_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺名称"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:drawablePadding="12dp"
            android:drawableLeft="@mipmap/store_b"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#cdcdcd"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#FAFAFA"
        android:padding="10dp">
        <ImageView
            android:id="@+id/confirm_order_item_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="1dp"
            android:background="@drawable/background_border"
            android:src="@mipmap/beauty"/>
        <TextView
            android:id="@+id/confirm_order_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_toRightOf="@+id/confirm_order_item_img"
            android:text="Risym电解电容16v/220uf体积6*7mm直插 优质电解电容 50只"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥2.60"
            android:textColor="@color/red"
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/confirm_order_item_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x 1"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/confirm_order_item_detail_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送方式"
                android:textSize="14sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快递￥10.00"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                android:layout_marginRight="10dp"
                android:drawableRight="@mipmap/right_arrow"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="10dp"
            android:background="#cdcdcd"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运费险"
                android:textSize="14sp"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/right_arrow"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="10dp"
            android:background="#cdcdcd"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:background="@color/white">
            <TextView
                android:id="@+id/confirm_order_item_tv_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="发票抬头："
                android:textSize="14sp"
                android:textColor="@color/black"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="蔡东东"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/confirm_order_item_tv_bill"
                android:layout_marginRight="20dp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="10dp"
            android:background="#cdcdcd"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:background="@color/white">
            <TextView
                android:id="@+id/confirm_order_item_tv_leave_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="买家留言："
                android:textSize="14sp"
                android:textColor="@color/black"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="选填:对本次交易的说明(建议填写已和卖家达成一致的内容)"
                android:layout_toRightOf="@+id/confirm_order_item_tv_leave_msg"
                android:layout_marginRight="20dp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="10dp"
            android:background="#cdcdcd"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="20dp"
            android:background="@color/white"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/confirm_order_item_subtotal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥12.00"
                android:layout_alignParentRight="true"
                android:textColor="@color/red"/>
            <TextView
                android:id="@+id/confirm_order_item_subtotal_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="共1件商品   小计:"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/confirm_order_item_subtotal_price"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#cdcdcd"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
   <LinearLayout
       android:id="@+id/confirm_order_item_opt_ll"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <RelativeLayout
           android:layout_width="match_parent"
           android:paddingLeft="10dp"
           android:background="@color/white"
           android:layout_height="50dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="使用积分抵扣￥1.20"
               android:layout_centerVertical="true"
               android:textSize="14sp"
               android:textColor="@color/black"/>
           <CheckBox
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_marginRight="10dp"/>
       </RelativeLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="0.2dp"
           android:background="#cdcdcd"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:gravity="center_vertical"
           android:paddingLeft="10dp"
           android:background="@color/white"
           android:layout_height="50dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:text="分期购买"
               android:textSize="14sp"
               android:textColor="@color/black"/>
           <CheckBox
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_marginRight="10dp"/>
       </RelativeLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="0.2dp"
           android:background="#cdcdcd"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:gravity="center_vertical"
           android:paddingLeft="10dp"
           android:background="@color/white"
           android:layout_height="50dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="匿名购买"
               android:layout_centerVertical="true"
               android:textSize="14sp"
               android:textColor="@color/black"/>
           <CheckBox
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_marginRight="10dp"/>
       </RelativeLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="0.2dp"
           android:background="#cdcdcd"
           android:layout_marginBottom="50dp"/>
   </LinearLayout>

</LinearLayout>