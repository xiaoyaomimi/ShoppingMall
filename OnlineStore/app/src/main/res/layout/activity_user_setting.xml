<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.UserSettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccentPress">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/activity_user_setting_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:drawablePadding="10dp"
                android:text="个人资料"
                android:textColor="#ffffff"
                android:drawableLeft="@mipmap/btn_back"
                android:textSize="18sp"/>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/image_head"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true"
        android:background="@drawable/layout_bg_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="头像"
            android:textSize="15sp"/>
        <com.mimile.onlinestore.view.customview.RoundImageView
            android:id="@+id/headerview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/beauty"
            android:layout_gravity="center"
            imagecontrol:border_thickness="2dp"
            imagecontrol:border_inside_color="#50c0e9"
            imagecontrol:border_outside_color="#ffffff"
            android:layout_centerVertical="true"
            android:layout_marginRight="60dp"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/right_arrow"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#cdcdcd"/>
    <RelativeLayout
        android:id="@+id/rl_user_account_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:background="@drawable/layout_bg_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="会员名"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_user_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:text="夏晓蓓"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/right_arrow"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#cdcdcd"/>
    <RelativeLayout
        android:id="@+id/modify_user_nick_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:background="@drawable/layout_bg_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="昵称"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/user_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:text="夏晓蓓"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/right_arrow"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#cdcdcd"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_bg_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="性别"
            android:textSize="15sp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radio_sex_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/main_tab_bottom"
                android:drawableLeft="@drawable/person_setting_sex_selector"
                android:textSize="15sp"
                android:text="男"/>
            <RadioButton
                android:id="@+id/radio_sex_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textSize="15sp"
                style="@style/main_tab_bottom"
                android:drawableLeft="@drawable/person_setting_sex_selector"
                android:text="女"/>
        </RadioGroup>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#cdcdcd"/>
    <RelativeLayout
        android:id="@+id/modify_user_user_phone_num"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_bg_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="手机号码"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/user_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="15691043385"
            android:layout_marginRight="30dp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#cdcdcd"/>
    <RelativeLayout
        android:id="@+id/modify_user_common_address"
        android:layout_width="match_parent"
        android:minHeight="50dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/layout_bg_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="常用地址"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/user_select_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:drawablePadding="10dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="北京市东花市北里20号楼6单元501室"
            android:drawableRight="@mipmap/right_arrow"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#cdcdcd"/>

</LinearLayout>