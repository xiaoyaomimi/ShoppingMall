<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e4e4e4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:padding="10dp"
                        android:text="筛选"
                        android:textColor="#444"
                        android:textSize="12sp"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/popwin_wares_filter_brand_expand_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="品牌"
                        android:textColor="#444"
                        android:textSize="12sp"/>

                    <CheckBox
                        android:id="@+id/popwin_wares_filter_brand_expand_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:button="@null"
                        android:background="@drawable/check_box_expand_selector"/>
                </RelativeLayout>

                <com.mimile.base.view.tagview.TagFlowLayout
                    android:id="@+id/popwin_wares_filter_brand_fl"
                    app:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingBottom="5dp">

                </com.mimile.base.view.tagview.TagFlowLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#EAEAEA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="折扣和服务"
                    android:textColor="#444"
                    android:textSize="12sp"/>

                <com.mimile.base.view.tagview.TagFlowLayout
                    android:id="@+id/popwin_wares_filter_discount_fl"
                    app:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp">

                </com.mimile.base.view.tagview.TagFlowLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#EAEAEA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="价格区间(元)"
                    android:textColor="#444"
                    android:textSize="12sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="6dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:background="#EAEAEA">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:inputType="number"
                        android:background="@drawable/shape_rounded_corner_white_bg_border_gray"
                        android:hint="最低价"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_remove_black_24dp"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:hint="最高价"
                        android:inputType="number"
                        android:padding="8dp"
                        android:background="@drawable/shape_rounded_corner_white_bg_border_gray"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#EAEAEA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="发货地"
                    android:textColor="#444"
                    android:textSize="12sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="成都"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:textColor="#444"
                        android:padding="5dp"
                        android:textSize="10sp"
                        android:background="@drawable/shape_rounded_corner_bg_search_his"
                        android:drawableLeft="@drawable/ic_room_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="定位"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/ic_refresh_black_24dp"/>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#EAEAEA" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="我喜欢"
                    android:textColor="#444"
                    android:textSize="12sp"/>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/popwin_wares_filter_reset_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:text="重置"
            android:textColor="@color/colorAccent"
            android:padding="12dp"
            android:background="@color/gray"/>

        <TextView
            android:id="@+id/popwin_wares_filter_confirm_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:clickable="true"
            android:textColor="@color/white"
            android:padding="12dp"
            android:background="@color/colorAccent"/>
    </LinearLayout>
</RelativeLayout>