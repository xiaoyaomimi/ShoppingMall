<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/rv_cart_item_store_head"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/rv_cart_item_store_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/person_setting_sex_selector"/>
            <TextView
                android:id="@+id/rv_cart_item_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺名称"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:drawablePadding="12dp"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@mipmap/store_b"
                android:drawableRight="@mipmap/right_arrow"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_cart_item_modify"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_centerVertical="true"
            android:background="@color/bg_color"/>
        <TextView
            android:id="@+id/tv_cart_item_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:textSize="12sp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:text="@string/modify"/>
    </RelativeLayout>
    <View
        android:id="@+id/rv_cart_item_middle_line"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#cdcdcd"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFA"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/rv_cart_item_wares_check_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true">
            <CheckBox
                android:id="@+id/rv_cart_item_wares_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:button="@null"
                android:background="@drawable/person_setting_sex_selector"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/rv_cart_item_wares_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">
            <LinearLayout
                android:id="@+id/rv_cart_item_wares_desc_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rv_cart_item_wares_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="淘宝网是亚太地区较大的网络零售、商圈，由阿里巴巴集团在2003年5月创立。"/>
                <TextView
                    android:id="@+id/rv_cart_item_wares_opt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:text="颜色分类:黑色;尺码:XXL"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/rv_cart_item_wares_sell_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="￥258"
                        android:textColor="@color/red"/>
                    <TextView
                        android:id="@+id/rv_cart_item_wares_original_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/rv_cart_item_wares_sell_price"
                        android:textSize="12sp"
                        android:text="￥300"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/black"
                        android:text="x 1"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rv_cart_item_wares_opt_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible">
                <TextView
                    android:id="@+id/rv_cart_item_wares_reduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="20sp"
                    android:background="@color/white"
                    android:text="-"/>
                <TextView
                    android:id="@+id/rv_cart_item_wares_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/white"
                    android:layout_toRightOf="@+id/rv_cart_item_wares_reduce"
                    android:textSize="20sp"
                    android:text="1"/>
                <TextView
                    android:id="@+id/rv_cart_item_wares_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_toRightOf="@+id/rv_cart_item_wares_num"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:text="+"/>

                <TextView
                    android:id="@+id/rv_cart_item_wares_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="@string/delete"
                    android:textColor="@color/white"
                    android:background="@color/colorAccent"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="颜色分类:黑色;尺码:XXL    ^"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:background="@color/white"
                    android:textSize="12sp"
                    android:layout_below="@+id/rv_cart_item_wares_num"/>
            </RelativeLayout>
        </FrameLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#cdcdcd"/>
</LinearLayout>