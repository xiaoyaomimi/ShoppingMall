<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    tools:context=".view.activity.UserInfoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccentPress">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/activity_userinfo_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:drawablePadding="10dp"
                android:text="个人中心"
                android:textColor="#ffffff"
                android:drawableLeft="@mipmap/btn_back"
                android:textSize="18sp"/>
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/user_info_rl_setting"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/layout_bg_selector"
                android:clickable="true"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人资料"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_personal_info"
                    android:textColor="@color/text_color"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginLeft="20dp"
                android:background="#cdcdcd" />
            <RelativeLayout
                android:id="@+id/user_info_rl_account_security"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/layout_bg_selector"
                android:clickable="true"
                android:paddingLeft="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账户安全"
                    android:drawablePadding="7dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_account_security"
                    android:textColor="@color/text_color"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginLeft="20dp"
                android:background="#cdcdcd" />
            <RelativeLayout
                android:id="@+id/user_info_rl_message_setting"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/layout_bg_selector"
                android:clickable="true"
                android:paddingLeft="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消息通知"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_message_note"
                    android:textColor="@color/text_color"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginLeft="20dp"
                android:background="#cdcdcd" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/layout_bg_selector"
                android:clickable="true"
                android:paddingLeft="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会员中心"
                    android:drawablePadding="8dp"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_member_center"
                    android:textColor="@color/text_color"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginLeft="20dp"
                android:background="#cdcdcd" />
            <RelativeLayout
                android:id="@+id/user_info_rl_common_setting"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/layout_bg_selector"
                android:clickable="true"
                android:paddingLeft="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通    用"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_common_setting"
                    android:textColor="@color/text_color"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#cdcdcd" />
            <RelativeLayout
                android:id="@+id/user_info_rl_about_us"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/layout_bg_selector"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于我们"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_about"
                    android:textColor="@color/text_color"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginLeft="20dp"
                android:background="#cdcdcd" />
            <RelativeLayout
                android:id="@+id/user_info_rl_share"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/layout_bg_selector"
                android:clickable="true"
                android:paddingLeft="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享好友"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_share_friend"
                    android:textColor="@color/text_color"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/right_arrow"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginLeft="20dp"
                android:background="#cdcdcd" />
            <RelativeLayout
                android:id="@+id/user_info_rl_update_check"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/layout_bg_selector"
                android:clickable="true"
                android:paddingLeft="20dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检查更新"
                    android:drawablePadding="6dp"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_check_update"
                    android:textColor="@color/text_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:text="当前版本 v5.15"
                    android:layout_centerVertical="true"
                    android:drawablePadding="15dp"
                    android:drawableRight="@mipmap/right_arrow"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#cdcdcd" />
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/login_loginout"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="注    销"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/logout_button_selector" />
</RelativeLayout>
