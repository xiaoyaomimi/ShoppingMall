<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/confirm_order_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#EEE9E9"/>

        <TextView
            android:id="@+id/confirm_order_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:gravity="center"
            android:clickable="true"
            android:background="@color/colorAccent"
            android:text="提交订单"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/confirm_order_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥0"
            android:textColor="@color/colorAccent"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/confirm_order_confirm"/>

        <TextView
            android:id="@+id/confirm_order_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计: "
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_toLeftOf="@id/confirm_order_total_price"/>
    </RelativeLayout>

</FrameLayout>